<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="dcu.datamodel.FitnessTest" table="FitnessTest" schema="dbo" catalog="SSSMSDemo">
        <id name="fitnessId">
            <column name="fitnessId" sql-type="int"/>
        </id>
        <property name="bodyFat">
            <column name="bodyFat" sql-type="int" not-null="true"/>
        </property>
        <property name="chinUps">
            <column name="chinUps" sql-type="int" not-null="true"/>
        </property>
        <property name="pushUps">
            <column name="pushUps" sql-type="int" not-null="true"/>
        </property>
        <many-to-one name="playerId" class="dcu.datamodel.Player" fetch="join" lazy="false">
            <column name="playerId" sql-type="int"/>
        </many-to-one>

    </class>
</hibernate-mapping>