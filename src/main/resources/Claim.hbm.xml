<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="dcu.datamodel.Claim" table="Claim" schema="dbo" catalog="SSSMSDemo">
        <id name="claimId">
            <column name="claimId" sql-type="java.lang.Integer"/>
        </id>
        <property name="claimReference">
            <column name="claimReference" sql-type="java.lang.String" not-null="true"/>
        </property>
    </class>

    <query name="getAllClaimsInfo">

        <![CDATA[select claimId,claimReference as ClaimReference from Claim t]]>
    </query>
    <!-- SELECT t.* FROM [SSMS-demo].dbo.Claim t -->

    <query name="getByRef">
        <![CDATA[select claimId,claimReference from Claim]]>
    </query>

    <query name="getClaim">
        <![CDATA[select claimId,claimReference as ClaimReference from Claim t WHERE claimId=2]]>
    </query>

</hibernate-mapping>